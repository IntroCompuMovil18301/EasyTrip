<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".VerHuespedActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="60dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/fotoPerfilHuespedAnfi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/perfirlanonimo" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/linearNombreHuespedAnfi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/txtNombreHuespedAnfi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"

                    android:backgroundTint="@color/acccent"
                    android:text="Carolina Lopez"
                    android:textAlignment="center"
                    android:textColor="@color/h1"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:ignore="DuplicateIds" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearEdadHuespedAnfi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/txtEdadHuespedAnfi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="26 Años"
                    android:textAlignment="center"
                    android:textColor="@color/h3"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearGeneroHuespedAnfi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/txtGeneroHuespedAnfi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mujer"
                    android:textAlignment="center"
                    android:textColor="@color/h3"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearNacionalidadHuespedAnfi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/txtNacionalidadHuespedAnfi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Colombian"
                    android:textAlignment="center"
                    android:textColor="@color/h3"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearInfoHuespedAnfi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="5dp"

                    android:backgroundTint="@color/acccent"
                    android:text="Sobre mi..."
                    android:textAlignment="viewStart"
                    android:textColor="@color/h1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/txtInfiHuespedAnfi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"

                    android:text="Soy una viajera frecuente, Me gusta el orden y la limpieza, Amante de la Música y la playa"
                    android:textAlignment="center"
                    android:textColor="@color/info"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearCalificacionHuespedAnfi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/txtCalificacionHuespedAnfi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="5dp"

                    android:backgroundTint="@color/acccent"
                    android:text="Calificación promedio:"
                    android:textAlignment="textStart"
                    android:textColor="@color/h1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="DuplicateIds" />


                <com.hsalf.smilerating.SmileRating
                    android:id="@+id/ratingView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    app:angryColor="#f29a68"
                    app:drawingColor="#353431"
                    app:isIndicator="false"
                    app:normalColor="#f2dd68"
                    app:placeHolderBackgroundColor="#e6e8ed"
                    app:placeHolderSmileColor="#ffffff"
                    app:textNonSelectionColor="#AEB3B5"
                    app:textSelectionColor="#000000" />



            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>